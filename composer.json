{
    "name": "darkghosthunter/larahelp",
    "description": "Supercharge your Laravel projects with useful global helpers.",
    "keywords": [
        "darkghosthunter",
        "helpers",
        "laravel"
    ],
    "homepage": "https://github.com/darkghosthunter/larahelp",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Italo Israel Baeza Cabrera",
            "email": "darkghosthunter@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "phpunit/phpunit": "^9.3",
        "mockery/mockery": "^1.4",
        "nesbot/carbon": "^2.41",
        "moneyphp/money": "^v4.0.2"
    },
    "autoload": {
        "files": [
            "helpers/auth.php",
            "helpers/common.php",
            "helpers/datetime.php",
            "helpers/filesystem.php",
            "helpers/http.php",
            "helpers/objects.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --coverage-clover build/logs/clover.xml",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
